---
filter: erb
---
<%
paginate(articles(:in_directory => @page.dir), 10) do |article|
  doc = Hpricot(render(article))
  doc.search('//h5') { |h5| h5.swap { h6 h5.inner_html } }
  doc.search('//h4') { |h4| h4.swap { h5 h4.inner_html } }
  doc.search('//h3') { |h3| h3.swap { h4 h3.inner_html } }
  doc.search('//h2') { |h2| h2.swap { h3 h2.inner_html } }
-%>

<%= link_to(article.created_at.to_s(:long), article)  -%>

<%= doc.inner_html -%>

<% unless Array(@pager).last == article -%>
  <hr></hr>
<% end -%>

<% end -%>
